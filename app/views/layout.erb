<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <% if session[:user] %>
      <form action='/sessions/logout' method='post'>
        <input type='submit' name='log_out' value='Log Out'>
      </form>
    <% end %>

    <%if session[:user_id] %>
    <a href="/log-out">
      <span class="material-icons"> logout </span>
        <form action="/log-out" method="get">
          <input type="submit" value="Log Out">
        </form>
    <a>
    <% end %>

    <%if session[:user_id].nil? && request.path_info != '/' %>
      <a href="/">
        <span class="material-icons"> login </span>
          <form action="/" method="get">
            <input type="submit" value="Log In">
          </form>
      </a>
    <% end %>

    <%if session[:user_id].nil? && request.path_info != '/register' && request.path_info != '/'%>
      <a href="/register">
        <span class="material-icons"> supervisor_account </span>
          <form action="/register" method="get">
            <input type="submit" value="Sign Up" class="nav-link">
          </form>
      </a>
    <% end %>

    <% flash.keys.each do |type| %>
      <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
        <a href="#" class="close">&times;</a>
      </div>
    <% end %>
  <%= yield %>

  </body>
</html>