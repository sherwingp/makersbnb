<div id="space-list" class="flex-container">
<div id="booking-header">
  <h1> Book a space </h1>
  <a href="/spaces/new">List a space</a>
</div>

  <% @spaces.each do |space| %>
    <div>
      <div>
        <%= space.description %>
      </div>
      <div>
        <%= space.location %>
      </div>
      <div>
        <%= space.price %>
      </div>
      <div>
        <form method="post" action="/spaces/<%=space.id%>/book">
          <input type="hidden" name="space_id" value="<%=space.id%>">
          <input type="hidden" name="host_id" value="<%=space.host_id%>">
          <button type="submit">Book</button>
        </form>
      </div>

    </div>
  
  <% end %>
</div>



