<div id="register-background" >
  <a>
    <img src="cloris-ying.jpg" alt="A house under the stars">
  </a>
</div>
<a class="unblur" href="/">
  <div class="blur"></div>
</a>

<div id="register-flex-container">
  <div id="register-header">
    <a href="/">
      <span class="material-icons-outlined">close</span>
    </a>
    <div>
    </h2>Sign up</h2>
    </div>
    <div>
      </h5>Join a world without strangers.</h5>
    </div>
  </div>
  <div></div>
  
  <form action='/register' method='post'>
    <div class="form">
      <div class="input-container ic1">
        <input id="firstname" class="input" type='text' name='first_name' placeholder=' ' required>
        <div class="cut"></div>
        <label for="firstname" class="placeholder">First name</label>
      </div>
      <div class="input-container ic2">
        <input id="lastname"  class="input" type='text' name='last_name' placeholder=' ' required>
        <div class="cut"></div>
        <label for="lastname" class="placeholder">Last name</label>
      </div>
      <div class="input-container ic2">
        <input id="email" class="input" type='text' name='email' placeholder=' ' required>
        <div class="cut cut-short"></div>
        <label for="email" class="placeholder">Email</label>
      </div>
      <div class="input-container ic2">
        <input id="password" class="input" type='password' name='password' placeholder=' ' minlength="8" required>
        <div class="cut"></div>
        <label for="password" class="placeholder">Password</label>
      </div>
      </div>
        <input class="submit" type='submit' name='register' value='Sign Up'>
      </div>
    </div>
  </form>

</div>
